<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ib_dialog_brush_small"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:src="@drawable/small"
        app:layout_constraintBottom_toTopOf="@+id/ib_dialog_brush_medium"
        app:layout_constraintEnd_toEndOf="@+id/ib_dialog_brush_medium"
        app:layout_constraintStart_toStartOf="@+id/ib_dialog_brush_medium"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_dialog_brush_medium"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:src="@drawable/medium"
        app:layout_constraintBottom_toTopOf="@+id/ib_dialog_brush_large"
        app:layout_constraintEnd_toEndOf="@+id/ib_dialog_brush_large"
        app:layout_constraintStart_toStartOf="@+id/ib_dialog_brush_large"
        app:layout_constraintTop_toBottomOf="@id/ib_dialog_brush_small" />

    <ImageButton
        android:id="@+id/ib_dialog_brush_large"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:src="@drawable/large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_dialog_brush_medium" />

</androidx.constraintlayout.widget.ConstraintLayout>